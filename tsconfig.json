{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "lib": ["esnext", "dom"],
    "sourceRoot": "./src",
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["components/*.vue"],
      "@lib/*": ["lib/*"],
      "@store/*": ["store/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
